{
  "version": 2,
  "name": "pdf-splitter",
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "backend/main.py": {
      "runtime": "@vercel/python",
      "maxDuration": 300
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task/backend",
    "MAX_FILE_SIZE": "136314880",
    "TIMEOUT_KEEP_ALIVE": "180"
  }
}